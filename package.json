{
  "name": "splitup-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "SplitUp - Monorepo with Next.js frontend and Express backend",
  "workspaces": [
    "web",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "npm run dev --workspace=web",
    "dev:api": "npm run dev --workspace=api",
    "build": "npm run build --workspace=web && npm run build --workspace=api",
    "build:web": "npm run build --workspace=web",
    "build:api": "npm run build --workspace=api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "pnpm@10.30.2+sha512.36cdc707e7b7940a988c9c1ecf88d084f8514b5c3f085f53a2e244c2921d3b2545bc20dd4ebe1fc245feec463bb298aecea7a63ed1f7680b877dc6379d8d0cb4"
}
